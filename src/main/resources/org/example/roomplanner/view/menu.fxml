<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.roomplanner.controller.MenuController"
            stylesheets="@../styles/styles.css"
            fx:id="rootPane">

    <!-- Центровочная карточка -->
    <VBox fx:id="card" styleClass="main-card"
          AnchorPane.topAnchor="10"
          AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          spacing="30"
          alignment="TOP_CENTER">

        <!-- Заголовок + логотип -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="PickMe House" styleClass="app-title"/>
        </HBox>

        <ImageView fitHeight="200" preserveRatio="true">
            <image>
                <Image url="@../assets/logo.png"/>
            </image>
        </ImageView>

        <!-- Кнопки -->
        <VBox spacing="20" alignment="CENTER">
            <Button text="Новый проект" onAction="#onStartClicked" styleClass="action-button">
                <graphic>
                    <ImageView fitWidth="34" fitHeight="34">
                        <image>
                            <Image url="@../assets/molotok.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Мои проекты" onAction="#onMyProjectsClicked" styleClass="action-button">
                <graphic>
                    <ImageView fitWidth="34" fitHeight="34">
                        <image>
                            <Image url="@../assets/spisok.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>

    </VBox>
</AnchorPane>