<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.roomplanner.controller.ProjectsController"
            fx:id="rootPane"
            stylesheets="@../styles/styles.css">

    <!-- Центровая карточка -->
    <VBox fx:id="card"
          styleClass="main-card"
          spacing="20"
          alignment="TOP_CENTER"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- Заголовок -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Мои проекты" styleClass="app-title"/>
            <ImageView fitHeight="36" preserveRatio="true">
                <image>
                    <Image url="@../assets/spisok.png"/>
                </image>
            </ImageView>
        </HBox>

        <!-- Таблица проектов -->
        <TableView fx:id="projectsTable" styleClass="project-table"
                   prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="nameCol" text="Название проекта" prefWidth="200"/>
                <TableColumn fx:id="dateCol" text="Дата создания" prefWidth="150"/>
                <TableColumn fx:id="sizeCol" text="Размер (Д×Ш×В), м" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Кнопка Назад -->
        <HBox alignment="CENTER">
            <Button text="Назад"
                    onAction="#onBackClicked"
                    styleClass="action-button"
                    prefWidth="120"/>
        </HBox>
    </VBox>
</AnchorPane>