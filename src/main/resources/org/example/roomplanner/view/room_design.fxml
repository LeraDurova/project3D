<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.roomplanner.controller.RoomDesignController"
            stylesheets="@../styles/styles.css">
    <children>
        <BorderPane AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0">

            <!-- Левая панель категорий -->
            <left>
                <VBox fx:id="categoryPane"
                      styleClass="sidebar"
                      spacing="10"
                      alignment="TOP_CENTER"
                      prefWidth="160">
                    <children>
                        <Button text="Спальня"
                                onAction="#onCategoryClicked"
                                styleClass="action-button category-button"/>
                        <Button text="Кухня"
                                onAction="#onCategoryClicked"
                                styleClass="action-button category-button"/>
                        <Button text="Ванная"
                                onAction="#onCategoryClicked"
                                styleClass="action-button category-button"/>
                        <Button text="Гостиная"
                                onAction="#onCategoryClicked"
                                styleClass="action-button category-button"/>
                    </children>
                </VBox>
            </left>

            <!-- Верхняя панель: прокручиваемый каталог мебели -->
            <top>
                <ScrollPane fitToWidth="true"
                            fitToHeight="true"
                            prefHeight="120"
                            styleClass="scroll-pane">
                    <content>
                        <FlowPane fx:id="furniturePane"
                                  hgap="15"
                                  vgap="15"
                                  prefWrapLength="600"
                                  style="-fx-padding:10;"/>
                    </content>
                </ScrollPane>
            </top>

            <!-- Центр: окно для SubScene с 3D-комнатой -->
            <center>
                <AnchorPane fx:id="roomPane"
                            styleClass="room-pane"/>
            </center>

            <!-- Нижняя панель: кнопки ручного управления камерой -->
