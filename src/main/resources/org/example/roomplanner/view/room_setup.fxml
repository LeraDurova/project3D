<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.roomplanner.controller.RoomSetupController"
            fx:id="rootPane"
            stylesheets="@../styles/styles.css">

    <VBox fx:id="card"
          styleClass="main-card"
          spacing="30"
          alignment="TOP_CENTER"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <HBox spacing="10" alignment="CENTER">
            <Label text="Введите размеры комнаты" styleClass="app-title"/>
        </HBox>

        <GridPane hgap="15" vgap="15" alignment="CENTER">
            <Label text="Длина (м):"   styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="lengthField"   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Ширина (м):"  styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="widthField"    GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Высота (м):"  styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="heightField"   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="backButton"
                    text="Назад"
                    onAction="#onBackClicked"
                    styleClass="action-button"
                    prefWidth="120"/>
            <Button fx:id="nextButton"
                    text="Далее"
                    onAction="#onNextClicked"
                    styleClass="action-button"
                    prefWidth="120"
                    disable="true"/>
        </HBox>
    </VBox>
</AnchorPane>